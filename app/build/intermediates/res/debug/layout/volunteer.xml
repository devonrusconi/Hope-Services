<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false"
    android:id="@+id/scroll"
    android:background="#fff6ee89"

    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:id="@+id/scrollCal">

    <TextView
    android:textColor="#fffbff1a"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Volunteer Opportunities"
    android:id="@+id/textView1"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#fff69982"
    android:textSize="25dp" />

    <TextView
        android:textColor="#fffbff1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#fff69982"
        android:text="It’s easy to make a donation! We accept monetary donations online, by phone, or by mail. Want to donate stock?  We can do that too. Other options include monthly giving, memorial gifts, real property, and more. We rely on your generous support."
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate!"
        android:id="@+id/button"
        android:singleLine="false"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Register for eScript!"
        android:id="@+id/textView3"
        android:background="#fff69982"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/button"
        android:textColor="#fffbff1a"
        android:textSize="20dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/escrip"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/textView3" />


    <TextView
        android:textColor="#fffbff1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="If you are an existing eScrip user:  Log in and select Hope Services as one of your designated groups.\n\nIf you are a new eScrip user:  Create an account and register your Safeway and/or credit/debit cards."
        android:id="@+id/textView4"
        android:background="#fff69982"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/imageView3" />

    <TextView
        android:textColor="#fffbff1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Obtain a S.H.A.R.E.S card!"
        android:id="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/textView4"
        android:background="#fff69982"
        android:textSize="20dp" />


    <TextView
        android:textColor="#fffbff1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up to 3% of the proceeds spent using your card at Lucky’s, FoodMaxx, or Save Mart will be donated to Hope.\n\nContact Angela Mazza, 408-284-2862, if you would like to obtain cards."
        android:id="@+id/textView18"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#fff69982"
        android:layout_below="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amazon Smile"
        android:id="@+id/textView6"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#fffbff1a"
        android:layout_below="@+id/textView18"
        android:background="#fff69982"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/amazonsmile"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Hope Services as your charitable beneficiary.The AmazonSmile Foundation will donate 0.5% of the purchase price from your eligible Amazon Smile purchases, excluding shipping and handling, gift-wrapping fees, taxes, or service charges.\nProducts which are eligible for donations are marked on their product detail pages; Recurring Subscribe-and-Save purchases and subscription renewals are not currently eligible."
        android:id="@+id/textView19"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#fffbff1a"
        android:layout_below="@+id/imageView"
        android:background="#fff69982"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volunteer with Hope"
        android:id="@+id/textView20"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#fffbff1a"
        android:layout_below="@+id/textView19"
        android:background="#fff69982"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volunteering at Hope Services may be the most fulfilling and rewarding time you set aside this year! Our participants would enjoy having members of our community be a part of Hope and a part of their lives in whatever capacity you can.\n(All volunteers must pass background check, fingerprinting and have current TB test)\nFor information on volunteering, contact Angela Mazza at 408-284-2862."
        android:id="@+id/textView21"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#fffbff1a"
        android:layout_below="@+id/textView20"
        android:background="#fff69982"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/volunteer"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/textView21" />





    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />




</RelativeLayout>
    </ScrollView><!-- From: file:/C:/Users/Devon/AndroidStudioProjects/Hope/app/src/main/res/layout/volunteer.xml -->