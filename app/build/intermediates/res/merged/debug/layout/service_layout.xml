<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false"
    android:id="@+id/scrollServ">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:gravity="center_horizontal" android:background="#ffb9cbe9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Our Services"
            android:id="@+id/textView"
            android:textSize="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="15dp"
            android:background="#fffffc2a"
            android:textColor="#ffe2e8ff"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/ewaste"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/textView"/>

        <Button
            android:id="@+id/donate"
            android:text="Children's Services"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:shadowColor="#A8A686"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn2"
            android:text="Day Services"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:shadowColor="#A8A686"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@+id/donate"
            android:layout_alignLeft="@+id/donate"
            android:layout_alignStart="@+id/donate" />
        <Button
            android:id="@+id/btn3"
            android:text="Work Services"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:shadowColor="#A8A686"
            android:shadowRadius="5"
            android:layout_below="@+id/btn2"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/btn4"
            android:text="Senior Services"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:shadowColor="#A8A686"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@+id/btn3"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn5"
            android:text="Counseling Services"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:shadowColor="#A8A686"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@+id/btn4"
            android:layout_alignLeft="@+id/btn4"
            android:layout_alignStart="@+id/btn4" />

        <Button
            android:id="@+id/btn6"
            android:text="Community Living Services"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:shadowColor="#A8A686"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@+id/btn5"
            android:layout_alignLeft="@+id/btn5"
            android:layout_alignStart="@+id/btn5"
            android:layout_marginBottom="25dp"/>




    </RelativeLayout>
</ScrollView>