<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false"
    android:id="@+id/scroll"
    android:background="#ff00f697"

    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/home">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Who We Are"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/textView1"
        android:textSize="30dp"
        android:background="#ff9096f6"
        android:textColor="#ffffffff"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nMore than 60 years ago, a group of concerned parents who had special needs children came together to change the way young people with developmental disabilities were treated. These courageous parents believed that their kids deserved the same opportunities as everyone else."
        android:id="@+id/textView2"
        android:layout_marginBottom="25dp"
        android:background="#ff9096f6"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/videoView"
        android:layout_alignStart="@+id/videoView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WATCH: Impressions of Hope"
        android:id="@+id/textView3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffffff"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff9096f6"
        android:autoText="true" />

    <VideoView
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:id="@+id/videoView"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/textView3"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WATCH: Learning for Life"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffffff"
        android:id="@+id/textView4"
        android:layout_below="@+id/videoView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff9096f6" />


    <VideoView
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:id="@+id/videoView2"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/textView4"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/hope"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignEnd="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WATCH: Hope Helps Families"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffffff"
        android:id="@+id/textView5"
        android:layout_below="@+id/videoView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff9096f6" />


    <VideoView
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:id="@+id/videoView3"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/textView5"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />


</RelativeLayout>
    </ScrollView>